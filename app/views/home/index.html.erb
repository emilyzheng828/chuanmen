<p>Find me in app/views/home/index.html.erb</p>

<b>Choose your free dates</b>
<%= form_for AvailableTime.new do |f| %>
	<%= f.date_field :from %> 
	<%= f.date_field :to %>
	<%= f.submit "Submit" %>
<% end %>

